---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BackToTop from '../components/BackToTop.astro';
import { getPersonalInfo, getExperience, getSkills, getCertifications, getSiteMetadata } from '../utils/portfolio-data.js';

const personalInfo = getPersonalInfo();
const experience = getExperience();
const skills = getSkills();
const certifications = getCertifications();
const siteMetadata = getSiteMetadata();

// Enhanced SEO for about page
const aboutPageTitle = `About ${personalInfo.name} | ${personalInfo.title} - Experience & Skills`;
const aboutPageDescription = `Learn about ${personalInfo.name}'s 15+ years of experience as a ${personalInfo.title}, including work at ${experience[0]?.company}, certifications, and technical expertise in ${skills[0]?.name}.`;
const aboutPageKeywords = [...siteMetadata.seo.keywords, 'about', 'experience', 'biography', 'cv', 'resume', 'background'];
---

<Layout 
  title={aboutPageTitle}
  description={aboutPageDescription}
  keywords={aboutPageKeywords}
>
  title={`About Me | ${personalInfo.name} - Portfolio`}
  description={`Learn about ${personalInfo.name}'s background, skills, and professional journey as a ${personalInfo.title}.`}
>
  <Header />
  
  <main class="bg-white dark:bg-gray-900">
    <!-- Hero Section -->
    <section class="relative py-10 sm:py-12 lg:py-16 overflow-hidden">
      <!-- Skills-themed Background Pattern with Blue/Purple theme -->
      <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 dark:from-gray-900 dark:via-blue-900 dark:to-purple-900"></div>
      
      <!-- Skills Icons Pattern with Blue/Purple colors -->
      <div class="absolute inset-0 opacity-15 dark:opacity-25">
        <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000">
          <defs>
            <pattern id="skills-pattern" x="0" y="0" width="120" height="120" patternUnits="userSpaceOnUse">
              <g fill="none" stroke="currentColor" stroke-width="1.5" class="text-blue-600 dark:text-blue-400">
                <!-- Cloud icon -->
                <path d="M20,60 Q15,50 25,50 Q30,45 40,50 Q50,45 60,50 Q65,50 60,60 L20,60 Z" fill="currentColor" opacity="0.4" class="text-indigo-500 dark:text-indigo-400"/>
                <!-- Code brackets -->
                <path d="M80,30 L70,40 L80,50" stroke-width="2" class="text-purple-600 dark:text-purple-400"/>
                <path d="M100,30 L110,40 L100,50" stroke-width="2" class="text-purple-600 dark:text-purple-400"/>
                <!-- Docker container -->
                <rect x="15" y="80" width="30" height="20" rx="2" fill="none" stroke="currentColor" class="text-blue-600 dark:text-blue-400"/>
                <line x1="20" y1="85" x2="40" y2="85" stroke="currentColor" class="text-blue-600 dark:text-blue-400"/>
                <!-- Database -->
                <ellipse cx="90" cy="85" rx="15" ry="5" fill="none" stroke="currentColor" class="text-indigo-600 dark:text-indigo-400"/>
                <path d="M75,85 L75,95 Q75,100 90,100 Q105,100 105,95 L105,85" fill="none" stroke="currentColor" class="text-indigo-600 dark:text-indigo-400"/>
              </g>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#skills-pattern)"/>
        </svg>
      </div>

      <!-- Floating Skill Elements with Blue/Purple theme -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-16 left-16 transform -rotate-12 opacity-25 dark:opacity-35">
          <div class="bg-white dark:bg-gray-800 rounded-lg p-3 shadow-lg text-xs font-mono text-gray-700 dark:text-gray-300 border border-blue-200 dark:border-blue-700">
            <div class="text-blue-600 dark:text-blue-400">Experience</div>
            <div class="text-indigo-600 dark:text-indigo-400">8+ years</div>
          </div>
        </div>
        
        <div class="absolute top-32 right-20 transform rotate-12 opacity-25 dark:opacity-35">
          <div class="bg-white dark:bg-gray-800 rounded-lg p-3 shadow-lg text-xs font-mono text-gray-700 dark:text-gray-300 border border-purple-200 dark:border-purple-700">
            <div class="text-purple-600 dark:text-purple-400">Cloud</div>
            <div class="text-indigo-600 dark:text-indigo-400">Expert</div>
          </div>
        </div>
        
        <div class="absolute bottom-32 left-24 transform -rotate-6 opacity-25 dark:opacity-35">
          <div class="bg-white dark:bg-gray-800 rounded-lg p-3 shadow-lg text-xs font-mono text-gray-700 dark:text-gray-300 border border-indigo-200 dark:border-indigo-700">
            <div class="text-purple-600 dark:text-purple-400">DevOps</div>
            <div class="text-indigo-600 dark:text-indigo-400">Specialist</div>
          </div>
        </div>
      </div>

      <!-- Animated Background Shapes with Blue/Purple theme -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-40 -left-40 w-80 h-80 bg-gradient-to-r from-blue-400 to-indigo-500 rounded-full mix-blend-multiply filter blur-xl opacity-25 animate-blob"></div>
        <div class="absolute -bottom-40 -right-40 w-80 h-80 bg-gradient-to-r from-purple-400 to-violet-500 rounded-full mix-blend-multiply filter blur-xl opacity-25 animate-blob animation-delay-2000"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-gradient-to-r from-indigo-400 to-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
      </div>

      <!-- Hero Content -->
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl sm:tracking-tight lg:text-5xl">
            About Me
          </h1>
          <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-600 dark:text-gray-300">
            {personalInfo.tagline}
          </p>
        </div>
      </div>
    </section>

    <!-- About Content -->
    <section class="py-12 sm:py-14 lg:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-12 lg:gap-8">
          <!-- Left Column - Tall Image -->
          <div class="lg:col-span-4 mb-10 lg:mb-0">
            <div class="sticky top-24 rounded-lg bg-gray-100 dark:bg-gray-800 overflow-hidden shadow-lg">
              <!-- Download Resume Button at Top -->
              <div class="p-4 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
                <a 
                  href={personalInfo.resumeUrl} 
                  target="_blank" 
                  rel="noopener noreferrer" 
                  class="flex items-center justify-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md transition-colors w-full"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  Download Resume
                </a>
              </div>
              
              <!-- Profile Image -->
              <img 
                src="/assets/img/about.jpeg" 
                alt={`${personalInfo.name} - ${personalInfo.title}`} 
                class="w-full h-auto object-cover" 
                style="min-height: 600px; object-position: center top;"
              />
              
              <!-- Social Links at Bottom -->
              <div class="p-4 bg-white dark:bg-gray-800">
                <div class="flex justify-center gap-4">
                  {personalInfo.socialLinks.map(link => (
                    <a href={link.url} target="_blank" rel="noopener noreferrer" aria-label={link.name} class="text-gray-600 hover:text-indigo-600 dark:text-gray-300 dark:hover:text-indigo-400">
                      <i class={`text-xl ${link.icon}`}></i>
                    </a>
                  ))}
                </div>
              </div>
            </div>
          </div>
          
          <!-- Right Column - Content -->
          <div class="lg:col-span-8">
            <!-- Professional Summary -->
            <div class="mb-12">
              <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Professional Summary</h2>
              
              <!-- Key Stats -->
              <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
                <div class="text-center p-4 bg-indigo-50 dark:bg-indigo-900/20 rounded-lg">
                  <div class="text-4xl font-bold text-indigo-600 dark:text-indigo-400">15+</div>
                  <div class="text-sm text-gray-600 dark:text-gray-300">Years in IT</div>
                </div>
                <div class="text-center p-4 bg-indigo-50 dark:bg-indigo-900/20 rounded-lg">
                  <div class="text-4xl font-bold text-indigo-600 dark:text-indigo-400">8+</div>
                  <div class="text-sm text-gray-600 dark:text-gray-300">Years in Cloud</div>
                </div>
                <div class="text-center p-4 bg-indigo-50 dark:bg-indigo-900/20 rounded-lg">
                  <div class="text-4xl font-bold text-indigo-600 dark:text-indigo-400">99.9%</div>
                  <div class="text-sm text-gray-600 dark:text-gray-300">Uptime Delivered</div>
                </div>
                <div class="text-center p-4 bg-indigo-50 dark:bg-indigo-900/20 rounded-lg">
                  <div class="text-4xl font-bold text-indigo-600 dark:text-indigo-400">15+</div>
                  <div class="text-sm text-gray-600 dark:text-gray-300">Satisfied Clients</div>
                </div>
              </div>

              <!-- Main Summary Content -->
              <div class="space-y-6">
                <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-100 dark:border-gray-700">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-600" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Expertise & Focus
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                    An accomplished Senior Cloud DevOps Engineer with proven expertise in optimizing CI/CD pipelines for high-quality deployments on public and hybrid cloud platforms. Strong problem solver with a focus on performance monitoring, cloud security, and promoting DevOps best practices across enterprise environments.
                  </p>
                </div>

                <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-100 dark:border-gray-700">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-600" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                    </svg>
                    Technical Proficiency
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-4">
                    Skilled in modern DevOps toolchains including Azure DevOps, Jenkins, Kubernetes, Docker, GitHub Actions, Ansible, and Terraform. Proficient in scripting with Bash, Python, and PowerShell for automated infrastructure management.
                  </p>
                  <div class="flex flex-wrap gap-2">
                    {['Azure', 'AWS', 'Kubernetes', 'Docker', 'Terraform', 'Jenkins', 'GitHub Actions', 'Python', 'PowerShell'].map(tech => (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>

                <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-100 dark:border-gray-700">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-600" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                    </svg>
                    Current Role & Location
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                    Currently serving as a Cloud Engineer at AFRY in Stockholm, Sweden, specializing in enterprise-scale cloud platforms (Primarily Azure), infrastructure automation, and implementing comprehensive governance solutions. Experienced in SAFe framework and Product Owner roles, effectively aligning product vision with stakeholder needs.
                  </p>
                </div>
              </div>
            </div>
            
            <!-- Work Experience -->
            <div class="mb-10">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Experience</h2>
              <div class="space-y-8">
                {experience.map((job, index) => (
                <div class="relative">
                  <div class="ml-9 pb-8">
                    <div class="-ml-12 absolute rounded-full w-8 h-8 bg-indigo-600 dark:bg-indigo-500 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd" />
                        <path d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z" />
                      </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white">{job.role}</h3>
                    <p class="text-sm text-indigo-600 dark:text-indigo-400">{job.company} • {job.period}</p>
                    <div class="mt-2 text-gray-600 dark:text-gray-300">
                      {job.locationLink ? (
                        <p class="mb-1">
                          <a 
                            href={job.locationLink} 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="inline-flex items-center text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 dark:hover:text-indigo-300 transition-colors"
                          >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                            </svg>
                            {job.location}
                          </a>
                        </p>
                      ) : (
                        <p class="mb-1">{job.location}</p>
                      )}
                      <ul class="mt-2 list-disc list-inside space-y-1 text-sm">
                        {job.description.map(item => (
                          <li>{item}</li>
                        ))}
                      </ul>
                      <div class="mt-3 flex flex-wrap gap-2">
                        {job.technologies.map(tech => (
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200">
                            {tech}
                          </span>
                        ))}
                      </div>
                    </div>
                  </div>
                </div>
                ))}
              </div>
            </div>

            <!-- Core Skills -->
            <div>
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-5">Skills & Expertise</h2>

              <div class="grid gap-6 grid-cols-1 md:grid-cols-2">
                {(Array.isArray(skills) ? skills : []).map((category: any) => (
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-5">
                  <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white flex items-center">
                    {category.name === 'Cloud Platforms' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-600" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M5.5 16a3.5 3.5 0 01-.369-6.98 4 4 0 117.753-1.977A4.5 4.5 0 1113.5 16h-8z" />
                      </svg>
                    )}
                    {(category.name === 'Configuration Management' || category.name === 'Scripting Languages') && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-600" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                    )}
                    {(category.name === 'CI/CD Tools' || category.name === 'Orchestration & Containerization') && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-600" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                      </svg>
                    )}
                    {(category.name === 'Monitoring & Logging' || category.name === 'Operating Systems' || category.name === 'Version Control' || category.name === 'Virtualization' || category.name === 'Cloud Governance & Security') && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-600" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                    )}
                    {category.name}
                  </h3>
                  <div class="space-y-3">
                    {category.skills.map((skill: any) => {
                      const levelText = skill.level === 5 ? 'Expert' : skill.level === 4 ? 'Advanced' : skill.level === 3 ? 'Intermediate' : 'Beginner';
                      const levelWidth = skill.level * 20;
                      return (
                        <div>
                          <div class="flex justify-between">
                            <span class="font-medium text-sm text-gray-900 dark:text-white">{skill.name}</span>
                            <span class="text-xs text-gray-500 dark:text-gray-400">{levelText}</span>
                          </div>
                          <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-1.5 mt-1">
                            <div class="bg-indigo-600 h-1.5 rounded-full" style={`width: ${levelWidth}%`}></div>
                          </div>
                        </div>
                      );
                    })}
                  </div>
                </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Certifications Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">
            Certifications
          </h2>
          <p class="mt-4 max-w-2xl mx-auto text-lg text-gray-600 dark:text-gray-300">
            Professional credentials and qualifications
          </p>
        </div>
        
        <div class="mt-10 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {certifications.map(cert => (
            <div class="bg-white dark:bg-gray-800 shadow overflow-hidden rounded-lg">
              <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
                  {cert.title}
                </h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">
                  {cert.issuer} • {cert.date}
                </p>
                <p class="mt-3 text-sm text-gray-600 dark:text-gray-300">
                  {cert.description}
                </p>
                <div class="mt-4">
                  <a href={cert.credentialUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-full shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    View Credential
                  </a>
                </div>
                <div class="mt-3 flex flex-wrap gap-2">
                  {cert.technologies.map(tech => (
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
  <BackToTop />
</Layout>
