---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getPersonalInfo, getExperience, getSkills, getCertifications, getMarkdownContent } from '../utils/portfolio-data.js';

const personalInfo = getPersonalInfo();
const experience = getExperience();
const skills = getSkills();
const certifications = getCertifications();
const aboutContent = getMarkdownContent('about');
---

<Layout
  title={`About Me | ${personalInfo.name} - Portfolio`}
  description={`Learn about ${personalInfo.name}'s background, skills, and professional journey as a ${personalInfo.title}.`}
>
  <Header />
  
  <main class="bg-white dark:bg-gray-900">
    <!-- Hero Section -->
    <section class="py-12 sm:py-16 lg:py-20 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl sm:tracking-tight lg:text-5xl">
            About Me
          </h1>
          <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-600 dark:text-gray-300">
            {personalInfo.tagline}
          </p>
        </div>
      </div>
    </section>

    <!-- About Content -->
    <section class="py-12 sm:py-16 lg:py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-12 lg:gap-8">
          <div class="lg:col-span-5 mb-10 lg:mb-0">
            <!-- Profile image flip card -->
            <div class="h-full rounded-lg bg-gray-100 dark:bg-gray-800 overflow-hidden">
              <div class="h-full flex items-center justify-center p-8">
                <div class="flip-card" tabindex="0" role="button" aria-label="Profile photo. Press Enter or Space to flip the card." aria-pressed="false">
                  <div class="flip-card-inner">
                    <div class="flip-card-front">
                      <img 
                        src="/assets/img/avatar.jpg" 
                        alt={`${personalInfo.name} - ${personalInfo.title}`} 
                        class="profile-image"
                        loading="eager" 
                      />
                    </div>
                    <div class="flip-card-back">
                      <img 
                        src="/assets/img/img.jpg" 
                        alt="Alternate view" 
                        class="profile-image"
                        loading="lazy"
                      />
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="lg:col-span-7">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">My Journey</h2>
            <div class="mt-6 space-y-6 text-gray-600 dark:text-gray-300 prose dark:prose-invert prose-indigo max-w-none">
              <div set:html={aboutContent} />
            </div>
            
            <!-- Work Experience -->
            <div class="mt-12">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Experience</h2>
              <div class="mt-6 space-y-8">
                {experience.map((job, index) => (
                <div class="relative">
                  <div class="ml-9 pb-8">
                    <div class="-ml-12 absolute rounded-full w-8 h-8 bg-indigo-600 dark:bg-indigo-500 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd" />
                        <path d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z" />
                      </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white">{job.role}</h3>
                    <p class="text-sm text-indigo-600 dark:text-indigo-400">{job.company} â€¢ {job.period}</p>
                    <div class="mt-2 text-gray-600 dark:text-gray-300">
                      <p class="mb-1">{job.location}</p>
                      <ul class="mt-2 list-disc list-inside space-y-1 text-sm">
                        {job.description.map(item => (
                          <li>{item}</li>
                        ))}
                      </ul>
                      <div class="mt-3 flex flex-wrap gap-2">
                        {job.technologies.map(tech => (
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200">
                            {tech}
                          </span>
                        ))}
                      </div>
                    </div>
                  </div>
                </div>
                ))}
                        <li>Created responsive design system used across all client projects</li>
                        <li>Introduced accessibility standards that became company policy</li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Skills Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">
            Skills & Expertise
          </h2>
          <p class="mt-4 max-w-2xl mx-auto text-lg text-gray-600 dark:text-gray-300">
            Technologies and methodologies I use in my day-to-day work
          </p>
        </div>
        
        <div class="mt-16">
          <dl class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-12">
            <!-- Skill Category 1 -->
            <div class="relative">
              <dt>
                <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-indigo-600 dark:bg-indigo-500 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                </div>
                <p class="ml-16 text-xl font-medium text-gray-900 dark:text-white">Frontend Development</p>
              </dt>
              <dd class="mt-2 ml-16 text-base text-gray-600 dark:text-gray-300">
                <ul class="space-y-2">
                  <li>HTML5, CSS3, JavaScript (ES6+)</li>
                  <li>React, Vue.js, Svelte</li>
                  <li>Tailwind CSS, SCSS</li>
                  <li>Responsive Design, Progressive Enhancement</li>
                </ul>
              </dd>
            </div>
            
            <!-- Skill Category 2 -->
            <div class="relative">
              <dt>
                <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-indigo-600 dark:bg-indigo-500 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
                  </svg>
                </div>
                <p class="ml-16 text-xl font-medium text-gray-900 dark:text-white">Backend Development</p>
              </dt>
              <dd class="mt-2 ml-16 text-base text-gray-600 dark:text-gray-300">
                <ul class="space-y-2">
                  <li>Node.js, Express, Fastify</li>
                  <li>Python, Django, Flask</li>
                  <li>RESTful APIs, GraphQL</li>
                  <li>MongoDB, PostgreSQL, Redis</li>
                </ul>
              </dd>
            </div>
            
            <!-- Skill Category 3 -->
            <div class="relative">
              <dt>
                <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-indigo-600 dark:bg-indigo-500 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                  </svg>
                </div>
                <p class="ml-16 text-xl font-medium text-gray-900 dark:text-white">Development Tools</p>
              </dt>
              <dd class="mt-2 ml-16 text-base text-gray-600 dark:text-gray-300">
                <ul class="space-y-2">
                  <li>Git, GitHub Actions</li>
                  <li>Docker, Kubernetes</li>
                  <li>Webpack, Vite, Rollup</li>
                  <li>Jest, Cypress, Testing Library</li>
                </ul>
              </dd>
            </div>
            
            <!-- Skill Category 4 -->
            <div class="relative">
              <dt>
                <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-indigo-600 dark:bg-indigo-500 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <p class="ml-16 text-xl font-medium text-gray-900 dark:text-white">Best Practices</p>
              </dt>
              <dd class="mt-2 ml-16 text-base text-gray-600 dark:text-gray-300">
                <ul class="space-y-2">
                  <li>Web Accessibility (WCAG)</li>
                  <li>Performance Optimization</li>
                  <li>Clean Code & Architecture</li>
                  <li>SEO Best Practices</li>
                </ul>
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </section>
    
    <!-- Education -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">
            Education
          </h2>
        </div>
        
        <div class="mt-12 space-y-8">
          <!-- Education Item -->
          <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg p-6">
            <div class="flex flex-col md:flex-row md:justify-between md:items-center">
              <div>
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Bachelor of Science in Computer Science</h3>
                <p class="text-indigo-600 dark:text-indigo-400">University Name</p>
              </div>
              <p class="mt-2 md:mt-0 text-gray-600 dark:text-gray-300">2013 - 2017</p>
            </div>
            <p class="mt-4 text-gray-600 dark:text-gray-300">
              Graduated with honors. Specialized in web technologies and software engineering.
              Senior project focused on developing an accessibility-first web framework.
            </p>
          </div>
          
          <!-- Certificates -->
          <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Certifications</h3>
            <ul class="mt-4 space-y-2 text-gray-600 dark:text-gray-300">
              <li>AWS Certified Solutions Architect</li>
              <li>Google Professional Web Developer</li>
              <li>Microsoft Certified: Azure Developer Associate</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-16 bg-indigo-700 dark:bg-indigo-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
            Interested in working together?
          </h2>
          <p class="mt-4 text-lg leading-6 text-indigo-100">
            I'm currently available for freelance work and open to new opportunities.
          </p>
          <div class="mt-8 flex justify-center">
            <div class="inline-flex rounded-md shadow">
              <a href="/contact" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-gray-50">
                Get in Touch
              </a>
            </div>
            <div class="ml-3 inline-flex">
              <a href="/resume" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 bg-opacity-60 hover:bg-opacity-70">
                View Resume
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
  
  <script src="../scripts/flip-card.js"></script>
</Layout>
