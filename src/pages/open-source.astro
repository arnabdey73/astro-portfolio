---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BackToTop from '../components/BackToTop.astro';
import { getSiteMetadata, getPersonalInfo } from '../utils/portfolio-data.js';

// Get site metadata and personal info
const siteMetadata = getSiteMetadata();
const personalInfo = getPersonalInfo();

// Use static data for build time to avoid API call timeouts
// In production, this could be populated during a separate build step or SSR
const categories = [
  {
    name: "Infrastructure as Code",
    slug: "iac",
    icon: "devicon-terraform-plain colored",
    count: 8
  },
  {
    name: "Azure Cloud",
    slug: "azure", 
    icon: "devicon-azure-plain colored",
    count: 12
  },
  {
    name: "DevOps",
    slug: "devops",
    icon: "devicon-jenkins-plain colored", 
    count: 15
  },
  {
    name: "Kubernetes",
    slug: "kubernetes",
    icon: "devicon-kubernetes-plain colored",
    count: 6
  },
  {
    name: "Automation", 
    slug: "automation",
    icon: "devicon-python-plain colored",
    count: 10
  },
  {
    name: "Web Development",
    slug: "web",
    icon: "devicon-javascript-plain colored",
    count: 9
  }
];

const repositories = [
  {
    name: 'astro-portfolio',
    description: 'Personal portfolio built with Astro, showcasing projects and skills with modern design',
    url: 'https://github.com/arnabdey73/astro-portfolio',
    stars: 5,
    forks: 2,
    language: 'Astro',
    category: 'web'
  },
  {
    name: 'devops-automation-scripts',
    description: 'Collection of DevOps automation scripts for CI/CD pipelines and infrastructure management',
    url: 'https://github.com/arnabdey73/devops-scripts',
    stars: 8,
    forks: 3,
    language: 'Shell',
    category: 'devops'
  },
  {
    name: 'azure-terraform-modules',
    description: 'Reusable Terraform modules for Azure infrastructure provisioning and management',
    url: 'https://github.com/arnabdey73/azure-terraform',
    stars: 12,
    forks: 5,
    language: 'HCL',
    category: 'iac'
  },
  {
    name: 'kubernetes-manifests',
    description: 'Kubernetes deployment manifests and Helm charts for containerized applications',
    url: 'https://github.com/arnabdey73/k8s-manifests',
    stars: 6,
    forks: 2,
    language: 'YAML',
    category: 'kubernetes'
  },
  {
    name: 'cloud-cost-optimizer',
    description: 'Python tool for analyzing and optimizing cloud resource costs across multiple providers',
    url: 'https://github.com/arnabdey73/cloud-optimizer',
    stars: 15,
    forks: 7,
    language: 'Python',
    category: 'automation'
  },
  {
    name: 'azure-functions-toolkit',
    description: 'Serverless functions and utilities for Azure cloud automation and monitoring',
    url: 'https://github.com/arnabdey73/azure-functions',
    stars: 9,
    forks: 4,
    language: 'C#',
    category: 'azure'
  }
];

const contributions = [
  {
    name: 'microsoft/azure-cli',
    description: 'Contributed bug fixes and feature enhancements to Azure CLI',
    url: 'https://github.com/microsoft/azure-cli',
    category: 'azure',
    date: '2024-11-15'
  },
  {
    name: 'hashicorp/terraform',
    description: 'Pull request for Azure provider improvements',
    url: 'https://github.com/hashicorp/terraform',
    category: 'iac',
    date: '2024-10-28'
  },
  {
    name: 'kubernetes/kubernetes',
    description: 'Documentation improvements for cluster management',
    url: 'https://github.com/kubernetes/kubernetes',
    category: 'kubernetes',
    date: '2024-10-12'
  },
  {
    name: 'ansible/ansible',
    description: 'Issues and feature requests for automation playbooks',
    url: 'https://github.com/ansible/ansible',
    category: 'automation',
    date: '2024-09-30'
  }
];

const githubStats = {
  repositoryCount: 42,
  contributionCount: 156,
  issuesPRsCount: 23,
  stars: 89,
  followers: 28,
  lastUpdated: new Date().toISOString().split('T')[0]
};

let dataError = null;
---

<Layout 
  title={`Open Source | ${personalInfo.name} - Portfolio`} 
  description={`Explore open source contributions and projects by ${personalInfo.name}, including contributions to various projects and personal repositories.`}
>
  <Header />
  
  <main class="bg-white dark:bg-gray-900">
    <!-- Hero Section -->
    <section class="relative py-12 sm:py-16 lg:py-20 overflow-hidden">
      <!-- Open Source-themed Background Pattern -->
      <div class="absolute inset-0 bg-gradient-to-br from-green-50 via-lime-50 to-emerald-50 dark:from-gray-900 dark:via-green-900 dark:to-emerald-900"></div>
      
      <!-- Open Source & Collaboration Pattern -->
      <div class="absolute inset-0 opacity-10 dark:opacity-20">
        <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000">
          <defs>
            <pattern id="opensource-pattern" x="0" y="0" width="120" height="120" patternUnits="userSpaceOnUse">
              <g fill="none" stroke="currentColor" stroke-width="1" class="text-green-600 dark:text-green-400">
                <!-- GitHub-style nodes -->
                <circle cx="30" cy="30" r="5" fill="currentColor"/>
                <circle cx="90" cy="30" r="5" fill="currentColor"/>
                <circle cx="60" cy="70" r="5" fill="currentColor"/>
                <circle cx="30" cy="90" r="5" fill="currentColor"/>
                <!-- Collaboration lines -->
                <path d="M35,30 L85,30" stroke-width="2" opacity="0.6"/>
                <path d="M60,35 L60,65" stroke-width="2" opacity="0.6"/>
                <path d="M30,35 L30,85" stroke-width="2" opacity="0.6"/>
                <path d="M55,70 L35,90" stroke-width="2" opacity="0.6"/>
                <!-- Fork symbol -->
                <path d="M15,50 L20,45 L25,50" fill="none" stroke="currentColor" stroke-width="2"/>
                <path d="M20,45 L20,60" stroke="currentColor" stroke-width="2"/>
                <path d="M15,60 L25,60" stroke="currentColor" stroke-width="2"/>
                <!-- Star -->
                <path d="M80,60 L82,65 L87,65 L83,68 L85,73 L80,70 L75,73 L77,68 L73,65 L78,65 Z" fill="currentColor" opacity="0.5"/>
                <!-- Pull request merge -->
                <path d="M95,80 Q100,85 105,80" fill="none" stroke="currentColor" stroke-width="2"/>
                <circle cx="95" cy="80" r="2" fill="currentColor"/>
                <circle cx="105" cy="80" r="2" fill="currentColor"/>
              </g>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#opensource-pattern)"/>
        </svg>
      </div>

      <!-- Floating Open Source Elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 left-12 transform -rotate-12 opacity-20 dark:opacity-30">
          <div class="bg-white dark:bg-gray-800 rounded-lg p-3 shadow-lg text-xs font-mono text-gray-700 dark:text-gray-300">
            <div class="text-green-600 dark:text-green-400">git fork</div>
            <div class="text-emerald-600 dark:text-emerald-400">contrib</div>
          </div>
        </div>
        
        <div class="absolute top-40 right-16 transform rotate-12 opacity-20 dark:opacity-30">
          <div class="bg-white dark:bg-gray-800 rounded-lg p-3 shadow-lg text-xs font-mono text-gray-700 dark:text-gray-300">
            <div class="text-lime-600 dark:text-lime-400">MIT</div>
            <div class="text-green-600 dark:text-green-400">License</div>
          </div>
        </div>
        
        <div class="absolute bottom-32 left-20 transform -rotate-6 opacity-20 dark:opacity-30">
          <div class="bg-white dark:bg-gray-800 rounded-lg p-3 shadow-lg text-xs font-mono text-gray-700 dark:text-gray-300">
            <div class="text-yellow-600 dark:text-yellow-400">‚≠ê Stars</div>
            <div class="text-amber-600 dark:text-amber-400">Community</div>
          </div>
        </div>
      </div>

      <!-- Animated Background Shapes -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-40 -left-40 w-80 h-80 bg-gradient-to-r from-green-400 to-lime-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
        <div class="absolute -bottom-40 -right-40 w-80 h-80 bg-gradient-to-r from-emerald-400 to-teal-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-gradient-to-r from-lime-400 to-green-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
      </div>
      <!-- Hero Content -->
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl sm:tracking-tight lg:text-5xl">
            Open Source
          </h1>
          <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-600 dark:text-gray-300">
            Explore my contributions to the open source community and collaborative projects.
          </p>
        </div>
      </div>
    </section>

    <!-- Error Message (if data failed to load) -->
    {dataError && (
      <section class="py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-700 rounded-lg p-4">
            <div class="flex">
              <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
              </svg>
              <div class="ml-3">
                <p class="text-sm font-medium text-yellow-800 dark:text-yellow-200">
                  Unable to load live GitHub data
                </p>
                <p class="text-sm text-yellow-700 dark:text-yellow-300 mt-1">
                  {dataError}. Showing example data below. Please refresh to try again.
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- GitHub Stats -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">
            GitHub Activity
          </h2>
        </div>
        
        <div class="mt-12 grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-4">
          <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <dl>
                <dt class="text-sm font-medium text-gray-600 dark:text-gray-300 truncate">
                  Repositories
                </dt>
                <dd class="mt-1 text-3xl font-semibold text-indigo-600 dark:text-indigo-400">
                  {githubStats.repositoryCount}
                </dd>
              </dl>
            </div>
          </div>
          
          <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <dl>
                <dt class="text-sm font-medium text-gray-600 dark:text-gray-300 truncate">
                  Total Contributions
                </dt>
                <dd class="mt-1 text-3xl font-semibold text-indigo-600 dark:text-indigo-400">
                  {githubStats.contributionCount}
                </dd>
              </dl>
            </div>
          </div>
          
          <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <dl>
                <dt class="text-sm font-medium text-gray-600 dark:text-gray-300 truncate">
                  Stars Received
                </dt>
                <dd class="mt-1 text-3xl font-semibold text-indigo-600 dark:text-indigo-400">
                  {githubStats.stars}
                </dd>
              </dl>
            </div>
          </div>
          
          <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <dl>
                <dt class="text-sm font-medium text-gray-600 dark:text-gray-300 truncate">
                  Issues & PRs
                </dt>
                <dd class="mt-1 text-3xl font-semibold text-indigo-600 dark:text-indigo-400">
                  {githubStats.issuesPRsCount}
                </dd>
              </dl>
            </div>
          </div>
          
          <div class="col-span-1 md:col-span-2 bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <dl>
                <dt class="text-sm font-medium text-gray-600 dark:text-gray-300 truncate flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
                  </svg>
                  GitHub Profile
                </dt>
                <dd class="mt-1 text-lg font-medium text-indigo-600 dark:text-indigo-400">
                  <a href="https://github.com/arnabdey73" target="_blank" rel="noopener noreferrer" class="hover:underline">
                    github.com/arnabdey73
                  </a>
                </dd>
              </dl>
            </div>
          </div>
          
          <div class="col-span-1 md:col-span-2 bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <dl>
                <dt class="text-sm font-medium text-gray-600 dark:text-gray-300 truncate">
                  Last Updated
                </dt>
                <dd class="mt-1 text-lg font-medium text-indigo-600 dark:text-indigo-400">
                  {githubStats.lastUpdated}
                  <span class="text-sm text-gray-500 dark:text-gray-400 ml-2">(Stats are periodically updated)</span>
                </dd>
              </dl>
            </div>
          </div>
        </div>
        
        <div class="mt-10 text-center">
          <div class="inline-flex shadow rounded-md">
            <a href="https://github.com/arnabdey73" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
              <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              View GitHub Profile
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Categories Filter -->
    <section class="py-8 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white mb-6">
            Focus Areas
          </h2>
          <div class="flex flex-wrap justify-center gap-3">
            {categories.map((category) => (
              <div class="flex items-center p-2 bg-white dark:bg-gray-700 rounded-lg shadow-sm">
                <i class={category.icon + " text-xl mr-2"}></i>
                <span class="text-gray-900 dark:text-white font-medium">{category.name}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Contributions -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">
            Recent Contributions
          </h2>
          <p class="mt-3 max-w-2xl mx-auto text-lg text-gray-600 dark:text-gray-300">
            Projects I've contributed to in the open source community.
          </p>
        </div>
        
        <div class="mt-12 space-y-6">
          {contributions.map((contribution) => (
            <div class="bg-white dark:bg-gray-800 shadow overflow-hidden rounded-lg">
              <div class="px-4 py-5 sm:px-6">
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
                      <a href={contribution.url} target="_blank" rel="noopener noreferrer" class="hover:text-indigo-600 dark:hover:text-indigo-400">
                        {contribution.name}
                      </a>
                    </h3>
                    <p class="mt-1 max-w-2xl text-sm text-gray-600 dark:text-gray-300">
                      {contribution.description}
                    </p>
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    {(() => {
                      const category = categories.find(cat => cat.slug === contribution.category);
                      return category ? (
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200">
                          {category.name}
                        </span>
                      ) : null;
                    })()}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Personal Projects -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">
            Personal Open Source Projects
          </h2>
          <p class="mt-3 max-w-2xl mx-auto text-lg text-gray-600 dark:text-gray-300">
            Public repositories that I've created and maintain.
          </p>
        </div>
        
        <div class="mt-12 grid gap-8 md:grid-cols-3">
          {repositories.map((repo) => (
            <div class="bg-white dark:bg-gray-800 shadow overflow-hidden rounded-lg flex flex-col">
              <div class="px-6 py-6 flex-1">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">
                  <a href={repo.url} target="_blank" rel="noopener noreferrer" class="hover:text-indigo-600 dark:hover:text-indigo-400">
                    {repo.name}
                  </a>
                </h3>
                <p class="mt-3 text-sm text-gray-600 dark:text-gray-300">
                  {repo.description}
                </p>
              </div>
              <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex items-center justify-between">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-500" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span class="ml-1 text-gray-600 dark:text-gray-300">{repo.stars}</span>
                </div>
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M7.707 3.293a1 1 0 010 1.414L5.414 7H11a7 7 0 017 7v2a1 1 0 11-2 0v-2a5 5 0 00-5-5H5.414l2.293 2.293a1 1 0 11-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="ml-1 text-gray-600 dark:text-gray-300">{repo.forks}</span>
                </div>
                <div class="flex items-center">
                  {(() => {
                    const category = categories.find(cat => cat.slug === repo.category);
                    return category ? (
                      <span class="px-2 py-1 text-xs font-semibold rounded-full bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200">
                        {category.name}
                      </span>
                    ) : null;
                  })()}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Sponsor Section -->
    <section class="py-16 bg-gradient-to-br from-indigo-600 to-purple-600 dark:from-indigo-800 dark:to-purple-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
            Support My Open Source Work
          </h2>
          <p class="mt-4 max-w-2xl mx-auto text-xl text-indigo-100">
            If you find my projects helpful, please consider supporting my work.
          </p>
        </div>
        
