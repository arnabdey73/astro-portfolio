<script>
  // Service Estimator Logic
  class ServiceEstimator {
    constructor() {
      this.services = new Map();
      this.timeline = 2; // Default 2 weeks
      this.complexity = 1; // Default simple
      this.init();
    }

    init() {
      // Service checkboxes
      document.querySelectorAll('.service-checkbox').forEach(checkbox => {
        checkbox.addEventListener('change', (e) => {
          const service = e.target.dataset.service;
          const baseCost = parseInt(e.target.dataset.baseCost);
          const weeklyCost = parseInt(e.target.dataset.weeklyCost);
          
          if (e.target.checked) {
            this.services.set(service, { baseCost, weeklyCost, name: e.target.closest('label').querySelector('h4').textContent });
          } else {
            this.services.delete(service);
          }
          
          this.updateEstimate();
        });
      });

      // Timeline radio buttons
      document.querySelectorAll('.timeline-radio').forEach(radio => {
        radio.addEventListener('change', (e) => {
          this.timeline = parseInt(e.target.value);
          this.updateEstimate();
        });
      });

      // Complexity radio buttons
      document.querySelectorAll('.complexity-radio').forEach(radio => {
        radio.addEventListener('change', (e) => {
          this.complexity = parseFloat(e.target.value);
          this.updateEstimate();
        });
      });

      // Get quote button
      document.getElementById('get-quote-btn').addEventListener('click', () => {
        this.generateQuote();
      });
    }

    updateEstimate() {
      const costBreakdown = document.getElementById('cost-breakdown');
      const totalCostElement = document.getElementById('total-cost');
      const getQuoteBtn = document.getElementById('get-quote-btn');

      if (this.services.size === 0) {
        costBreakdown.innerHTML = '<p class="text-gray-600 dark:text-gray-300">Select services to see cost breakdown</p>';
        totalCostElement.textContent = 'SEK 0';
        getQuoteBtn.disabled = true;
        return;
      }

      let totalCost = 0;
      let breakdownHTML = '';

      this.services.forEach((service, key) => {
        const serviceCost = (service.baseCost + (service.weeklyCost * this.timeline)) * this.complexity;
        totalCost += serviceCost;
        
        breakdownHTML += `
          <div class="flex justify-between items-center py-2 border-b border-gray-200 dark:border-gray-700 last:border-b-0">
            <span class="text-gray-700 dark:text-gray-300">${service.name}</span>
            <span class="font-medium text-gray-900 dark:text-white">SEK ${serviceCost.toLocaleString()}</span>
          </div>
        `;
      });

      costBreakdown.innerHTML = breakdownHTML;
      totalCostElement.textContent = `SEK ${totalCost.toLocaleString()}`;
      getQuoteBtn.disabled = false;
    }

    generateQuote() {
      const selectedServices = Array.from(this.services.values()).map(s => s.name);
      const totalCost = document.getElementById('total-cost').textContent;
      
      const quoteData = {
        services: selectedServices,
        timeline: this.timeline,
        complexity: this.complexity,
        totalCost: totalCost
      };

      // Create email content
      const emailSubject = 'DevOps Service Quote Request';
      const emailBody = `Hi Arnab,

I'd like to request a detailed quote for the following services:

Selected Services:
${selectedServices.map(s => `• ${s}`).join('\n')}

Project Timeline: ${this.timeline} weeks
Project Complexity: ${this.complexity}x
Estimated Total Cost: ${totalCost}

Please provide a detailed quote with:
- Detailed project breakdown
- Timeline and milestones
- Deliverables and documentation
- Support and maintenance terms

Looking forward to discussing this project further.

Best regards`;

      // Open email client
      window.location.href = `mailto:arnab.dey@gmail.com?subject=${encodeURIComponent(emailSubject)}&body=${encodeURIComponent(emailBody)}`;
    }
  }

  // Initialize estimator when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new ServiceEstimator();
  });
</script>
