---
// FloatingContactButton Component
---

<a 
  href="/contact" 
  id="floatingContact" 
  class="fixed bottom-32 right-6 bg-indigo-600 hover:bg-indigo-700 text-white p-3 rounded-full shadow-lg transition-all duration-300 ease-in-out transform scale-0 opacity-0 z-50"
  aria-label="Contact Me"
  title="Contact Me"
>
  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
  </svg>
</a>

<script>
  function initFloatingContact() {
    const floatingContactButton = document.getElementById('floatingContact');
    
    if (!floatingContactButton) return;

    // Show button after scrolling
    function toggleFloatingContact() {
      if (window.pageYOffset > 500) {
        floatingContactButton?.classList.remove('scale-0', 'opacity-0');
        floatingContactButton?.classList.add('scale-100', 'opacity-100');
      } else {
        floatingContactButton?.classList.remove('scale-100', 'opacity-100');
        floatingContactButton?.classList.add('scale-0', 'opacity-0');
      }
    }

    // Event listeners
    window.addEventListener('scroll', toggleFloatingContact);

    // Initial check
    toggleFloatingContact();
  }

  // Initialize when DOM is loaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFloatingContact);
  } else {
    initFloatingContact();
  }
</script>
